      "framing": "Chest to head"
    },
    "close_up": {
      "name": "Close-Up (CU)",
      "description": "Shows face filling most of frame",
      "use_cases": ["emotional intensity", "reactions", "important dialogue"],
      "framing": "Face fills frame, some neck visible"
    },
    "extreme_close_up": {
      "name": "Extreme Close-Up (ECU)",
      "description": "Shows specific detail like eyes or hands",
      "use_cases": ["dramatic emphasis", "detail shots", "tension"],
      "framing": "Single feature fills frame"
    }
  },
  
