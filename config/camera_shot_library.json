{
  "shot_types": {
    "extreme_wide": {
      "name": "Extreme Wide Shot (EWS)",
      "description": "Shows vast landscapes or cityscapes, subject is tiny or invisible",
      "use_cases": ["establishing location", "showing scale", "epic moments"],
      "framing": "Subject occupies less than 10% of frame"
    },
    "wide": {
      "name": "Wide Shot (WS)",
      "description": "Shows full body of subject with significant environment",
      "use_cases": ["establishing scene", "showing action", "group shots"],
      "framing": "Full body visible with environment context"
    },
    "full": {
      "name": "Full Shot (FS)",
      "description": "Shows subject from head to toe",
      "use_cases": ["character introduction", "costume reveal", "body language"],
      "framing": "Head to toe, minimal headroom"
    },
    "medium_wide": {
      "name": "Medium Wide Shot (MWS)",
      "description": "Shows subject from knees up",
      "use_cases": ["dialogue with movement", "two-shots", "action"],
      "framing": "Knees to head"
    },
    "medium": {
      "name": "Medium Shot (MS)",
      "description": "Shows subject from waist up",
      "use_cases": ["standard dialogue", "interviews", "reactions"],
      "framing": "Waist to head"
    },
    "medium_close": {
      "name": "Medium Close-Up (MCU)",
      "description": "Shows subject from chest up",
