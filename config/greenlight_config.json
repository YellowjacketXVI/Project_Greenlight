{
  "project_name": "Project Greenlight",
  "version": "2.1.0",
  "verbose_logging": true,
  "enable_caching": true,
  "auto_save": true,

  "paths": {
    "config_dir": "config",
    "templates_dir": "templates",
    "logs_dir": "logs"
  },

  "specialized_models": {
    "frame_validation": {
      "provider": "anthropic",
      "model": "claude-haiku-4-5-20251001",
      "fallback_model": "grok-4",
      "description": "Cost-efficient model for frame validation and splitting"
    },
    "scene_analysis": {
      "provider": "anthropic",
      "model": "claude-opus-4-5-20251101",
      "fallback_model": "grok-4",
      "description": "Premium model for scene analysis and shot sequencing"
    },
    "physiological_tells": {
      "provider": "anthropic",
      "model": "claude-haiku-4-5-20251001",
      "fallback_model": "grok-4",
      "description": "Cost-efficient model for physiological tells generation"
    },
    "world_bible_research": {
      "provider": "anthropic",
      "model": "claude-haiku-4-5-20251001",
      "fallback_model": "grok-4",
      "description": "Cost-efficient model for character, location, and prop research"
    }
  },

  "llm_providers": {
    "claude_opus": {
      "provider": "anthropic",
      "model": "claude-opus-4-5-20251101",
      "api_key_env": "ANTHROPIC_API_KEY",
      "temperature": 0.7,
      "max_tokens": 8192,
      "timeout": 120
    },
    "claude_sonnet": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-20250929",
      "api_key_env": "ANTHROPIC_API_KEY",
      "temperature": 0.5,
      "max_tokens": 4096,
      "timeout": 60
    },
    "claude_haiku": {
      "provider": "anthropic",
      "model": "claude-haiku-4-5-20251001",
      "api_key_env": "ANTHROPIC_API_KEY",
      "temperature": 0.3,
      "max_tokens": 4096,
      "timeout": 60
    },
    "gemini_flash": {
      "provider": "google",
      "model": "gemini-2.5-flash",
      "api_key_env": "GEMINI_API_KEY",
      "temperature": 0.5,
      "max_tokens": 4096,
      "timeout": 60
    },
    "gemini_pro": {
      "provider": "google",
      "model": "gemini-3-pro-preview",
      "api_key_env": "GEMINI_API_KEY",
      "temperature": 0.7,
      "max_tokens": 8192,
      "timeout": 120
    },
    "grok_4": {
      "provider": "grok",
      "model": "grok-4",
      "api_key_env": "XAI_API_KEY",
      "temperature": 0.5,
      "max_tokens": 4096,
      "timeout": 60
    }
  },
  
  "function_mappings": [
    {
      "function": "story_generation",
      "primary": "claude_opus",
      "fallback": "grok_4"
    },
    {
      "function": "story_analysis",
      "primary": "claude_haiku",
      "fallback": "grok_4"
    },
    {
      "function": "director",
      "primary": "claude_opus",
      "fallback": "grok_4"
    },
    {
      "function": "tag_validation",
      "primary": "gemini_flash",
      "fallback": "grok_4"
    },
    {
      "function": "continuity",
      "primary": "gemini_pro",
      "fallback": "claude_sonnet"
    },
    {
      "function": "research",
      "primary": "claude_haiku",
      "fallback": "grok_4"
    },
    {
      "function": "assistant_reasoning",
      "primary": "gemini_pro",
      "fallback": "claude_opus"
    },
    {
      "function": "quick_response",
      "primary": "gemini_flash",
      "fallback": "grok_4"
    },
    {
      "function": "assistant",
      "primary": "claude_haiku",
      "fallback": "gemini_flash"
    },
    {
      "function": "assistant_query",
      "primary": "gemini_flash",
      "fallback": "claude_haiku"
    },
    {
      "function": "assistant_command",
      "primary": "claude_haiku",
      "fallback": "grok_4"
    }
  ],
  
  "ui": {
    "theme": "dark",
    "window_width": 1600,
    "window_height": 900,
    "font_family": "Segoe UI",
    "font_size": 11,
    "panel_ratios": [0.2, 0.5, 0.3]
  },
  
  "pipeline": {
    "tag_consensus_threshold": 0.8,
    "max_retries": 3,
    "parallel_agents": 5,
    "chunk_size": 2000,
    "chunk_overlap": 200
  }
}

